<h2>Planets index</h2>

<table>
  <tr>
    <th>Planet</th>
    <th>Description</th>
    <th>Race</th>
  </tr>

  {{#each planets}}
    <tr>
      <td><a href="/planets/{{id}}">{{_capitalize name}}</a></td>
      <td>{{_truncate description 180}}</td>
      <td><a href="/races/{{race.id}}">{{_capitalize race.name}}</a></td>
    </tr>
  {{/each}}


</table>
