<h2>Races index</h2>

<table>
  <tr>
    <th>Race</th>
    <th>Description</th>
    <th>Planets</th>
    <th>Heroes</th>
  </tr>

  {{#each races}}
    <tr>
      <td><a href="/races/{{id}}">{{_capitalize name}}</a></td>
      <td>{{_truncate description 180}}</td>
      <td>{{#planets}} {{_capitalize name}} {{/planets}}</td>
      <td>{{#heroes}} <a href="/heroes/{{id}}">{{name}}</a> {{/heroes}}</td>
    </tr>
  {{/each}}


</table>

<hr>

<button><a href="/races/new">Add new</a></button>
